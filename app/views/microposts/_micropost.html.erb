<!-- Blog Post -->

          <div class="panel panel-default">
            <!-- <img class="panel-img-top" src="<%=micropost.image_url%>" alt="panel image cap"> -->
              <%#= image_tag micropost.image_url, class: "panel-img-top" %>
            <div class="panel-body">
              <h2 class="panel-title">  <%= micropost.title %></h2>
              <p class="panel-text">  <%= micropost.content %></p>
                <%= link_to "Read More", micropost ,class: "btn btn-primary"%>
            </div>
            <div class="panel-footer text-muted">
                <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago</span>
                  <%= link_to "delete", micropost, method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
          </div>
